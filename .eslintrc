{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "module": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "angular": true,
        "$": true,
        "$app": true
    },
    "rules": {
        "quotes": [
            1,
            "single"
        ],
        "eol-last": 0,
        "no-debugger": 1,
        "no-mixed-requires": 0,
        "no-underscore-dangle": 0,
        "no-multi-spaces": 0,
        "no-trailing-spaces": 0,
        "no-extra-boolean-cast": 0,
        "no-unused-vars": 2,
        "new-cap": 0,
        "camelcase": 2,
        "indent": [
            1,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": [
            2,
            "always"
        ]
    }
}
